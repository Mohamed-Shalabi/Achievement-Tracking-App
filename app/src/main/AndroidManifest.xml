<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mshalaby612.achievementtracker">

    <application
        android:name="com.mshalaby612.achievementtracker.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.mshalaby612.achievementtracker.ui.activities.StatisticsActivity" />
        <activity android:name="com.mshalaby612.achievementtracker.ui.activities.TrackingActivity" />
        <activity android:name="com.mshalaby612.achievementtracker.ui.activities.SettingsActivity" />
        <activity android:name="com.mshalaby612.achievementtracker.ui.activities.CountDownActivity" />
        <activity android:name="com.mshalaby612.achievementtracker.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.mshalaby612.achievementtracker.recievers.DailyProgressReceiver" />
    </application>

</manifest>